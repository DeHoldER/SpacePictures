<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpacePictures" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_gray</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Indigo">
        <item name="themeStatusBarColor">@color/pink_dark</item>
        <item name="themeColorPrimary">@color/indigo</item>
        <item name="themeColorSecondary">@color/indigo_dark</item>
        <item name="colorPrimaryDark">@color/indigo_dark</item>
        <item name="themeColorAccent">@color/indigo_light</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="textColorDisConnected">@color/light_gray</item>
    </style>

    <style name="AppTheme.Pink">
        <item name="themeStatusBarColor">@color/pink_dark</item>
        <item name="themeColorPrimary">@color/pink</item>
        <item name="themeColorSecondary">@color/pink_dark</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="themeColorAccent">@color/pink_light</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="textColorDisConnected">@color/light_gray</item>
    </style>

    <style name="AppTheme.Mars">
        <item name="themeColorPrimary">@color/mars_primary</item>
        <item name="themeColorSecondary">@color/mars_dark</item>
        <item name="colorPrimaryDark">@color/mars_dark</item>
        <item name="themeColorAccent">@color/mars_light</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="textColorDisConnected">@color/light_gray</item>
    </style>

    <style name="AppTheme.Jupiter">
        <item name="themeColorPrimary">@color/jupiter_primary</item>
        <item name="themeColorSecondary">@color/jupiter_dark</item>
        <item name="colorPrimaryDark">@color/jupiter_dark</item>
        <item name="themeColorAccent">@color/jupiter_light</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="textColorDisConnected">@color/light_gray</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="android:statusBarColor">?themeStatusBarColor</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">?themeColorSecondary</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="textColorConnected">@color/green</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>

        <!--        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>-->
        <!--        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>-->
    </style>

    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>



</resources>
