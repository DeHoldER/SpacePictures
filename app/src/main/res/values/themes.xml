<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpacePictures" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_gray</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.IndigoTheme">
        <item name="themeColorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigo_dark</item>
        <item name="themeColorAccent">@color/indigo_light</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>

    </style>

    <style name="AppTheme.PinkTheme">
        <item name="themeColorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink_dark</item>
        <item name="colorPrimaryDark">@color/pink_dark</item>
        <item name="themeColorAccent">@color/pink_light</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorAccent">?themeColorAccent</item>
    </style>


</resources>
